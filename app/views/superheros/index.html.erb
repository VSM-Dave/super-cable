<h1>Superheros#index</h1>

<ul id="superheros">
  <li id="superhero_<%= @my_hero.id %>">
    <%= form_with(model: @my_hero) do |form| %>
      <div class="form-group">
        <%= form.label(:name) %>
        <%= form.text_field(:name) %>
      </div>
      <div class="form-group">
        <%= form.label(:power) %>
        <%= form.text_field(:power) %>
      </div>
      <div class="form-group">
        <%= form.label(:weakness) %>
        <%= form.text_field(:weakness) %>
      </div>

      <%= form.submit %>
    <% end %>
  </li>

  <% @superheros.each do |superhero| %>
    <li id="superhero_<%= superhero.id %>">
      <div><%= superhero.name %></div>
      <div><%= superhero.power %></div>
      <div><%= superhero.weakness %></div>
    </li>
  <% end %>
</ul>
